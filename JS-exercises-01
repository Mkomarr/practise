<!DOCTYPE HTML>
<html lang="pl">
<head>
	<meta charset="utf-8">	
  
	<script type="text/javascript">
		function check()
{
		var figure = document.getElementById("box").value;
	
		if (figure>0) document.getElementById("result").innerHTML="positive";
		else if (figure<0) document.getElementById("result").innerHTML="negative";
		else if (figure==0) document.getElementById("result").innerHTML="zero";
		else document.getElementById("result").innerHTML="it isn't figure";
}
	</script>
	
</head>
<body>
	
	<input type="text" id="box" />
	<input type="submit" value="Check your number" onclick="check()" />	
	<div id="result"></div>

</body>
</html>
