//instrukcja warunkowa switch
const dayOfTheWeek = "poniedziałek";
switch (dayOfTheWeek) {
	case "poniedziałek":
		console.log("dziś poniedziałek");
		break; //informacja, że jeśli ta instrukcja się wykona to silnik ma zakończyć działanie funkcji już teraz
	case "wtorek":
		console.log("dziś wtorek");
		break;
	case "środa":
		console.log("dziś środa");
		break;
	default:
		console.log("nie mam pojęcia jaki dziś dzień");
		break;
	};
	
//operator trójwarunkowy a ? b : c 
const score = 100;
20 === "20" && score ? console.log("wykonuje się, bo prawda") : console.log("wykonuje się bo warunek nie jest prawdziwy");
false || true ? console.log("prawda") : console.log("fałsz");
score > 120 ? console.log("prawda") : console.log("nie prawda");
//z instrukcji warunkowej nie można przechwycić wartości i przypisać jej do zmiennej

//przykład zwracania wartości
//console.log(1 > 10 ? 1 : 0);

let gameResult = 0;
let killedMonsters = 11;
gameResult += killedMonsters > 10 ? 1 : 0;
//można też zamiast powiększać gameResult przypisać wynik do zmiennej - let score = killedMonsters > 10 ? 1 : 0
//tak działa prosty mechanizm gry
//gameResult będzie miało wartość 1, bo instrukcja zwróciła właśnie 1

const playerName = "Kamil";
console.log(`Witaj ${playerName ? playerName : "nieznajomy wojowniku"}`);
	
		
